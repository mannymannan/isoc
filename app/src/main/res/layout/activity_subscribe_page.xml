<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_width="match_parent">

    <!-- Text fields prompting the user what to enter -->
    <TextView
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_height="wrap_content" />

    <!-- Field where user enters data -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Email"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Degree Studying"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etDegree_Studying"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Mobile Number"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etMobile_Number"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <!-- Button directing the user to a screen confirming subscription -->
    <Button
        android:id="@+id/bSubscribe"
        android:text="Subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

